<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <bean id="eventsStorage" class="com.epam.jmp.spring.core.dao.storage.impl.EventsStorageImpl"/>
    <bean id="userStorage" class="com.epam.jmp.spring.core.dao.storage.impl.UsersStorageImpl"/>
    <bean id="ticketStorage" class="com.epam.jmp.spring.core.dao.storage.impl.TicketsStorageImpl"/>

    <bean id="eventDao" class="com.epam.jmp.spring.core.dao.impl.EventDao" init-method="init">
        <property name="storage" ref="eventsStorage" />
    </bean>
    <bean id="userDao" class="com.epam.jmp.spring.core.dao.impl.UserDao" init-method="init">
        <property name="storage" ref="userStorage" />
    </bean>
    <bean id="ticketDao" class="com.epam.jmp.spring.core.dao.impl.TicketDao" init-method="init">
        <property name="storage" ref="ticketStorage" />
    </bean>

    <bean id="eventService" class="com.epam.jmp.spring.core.service.impl.EventServiceImpl">
        <property name="eventDao" ref="eventDao" />
    </bean>
    <bean id="userService" class="com.epam.jmp.spring.core.service.impl.UserServiceImpl">
        <property name="userDao" ref="userDao" />
    </bean>
    <bean id="ticketService" class="com.epam.jmp.spring.core.service.impl.TicketServiceImpl">
        <property name="ticketDao" ref="ticketDao" />
    </bean>

    <bean id="bookingFacade" class="com.epam.jmp.spring.core.facade.impl.BookingFacadeImpl">
        <property name="eventService" ref="eventService" />
        <property name="userService" ref="userService" />
        <property name="ticketService" ref="ticketService" />
    </bean>
    <context:annotation-config />
</beans>
